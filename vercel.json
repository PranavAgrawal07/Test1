{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/handler.py"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/$1"
    }
  ],
  "installCommand": "pip install -r api/requirements.txt && npm install --prefix client",
  "buildCommand": "npm run build --prefix client"
}
